<Window x:Class="OsuLauncher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsuLauncher"
        mc:Ignorable="d"
        xmlns:hc="https://handyorg.github.io/handycontrol"
        Title="MainWindow" Height="600" Width="1066">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top">
            <Button Name="NewsNavButton" Content="News" hc:BorderElement.CornerRadius="1" Height="35" Width="80" Style="{StaticResource ButtonCustom}"/>
            <Button Name="BeatmapNavButton" Content="Beatmaps" hc:BorderElement.CornerRadius="1" Height="35" Width="80" Style="{StaticResource ButtonCustom}"/>
            <Button Name="CollectionsNavButton" Content="My Collections" hc:BorderElement.CornerRadius="1" Height="35" Width="80" Style="{StaticResource ButtonCustom}"/>
            <Button Name="ReplaysNavButton" Content="My Replays" hc:BorderElement.CornerRadius="1" Height="35" Width="80" Style="{StaticResource ButtonCustom}"/>
            <Button Name="SettingsNavButton" Content="Settings" hc:BorderElement.CornerRadius="1" Height="35" Width="80" Style="{StaticResource ButtonCustom}"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Bottom">
            <Button Name="PlayButton" Content="Play" Foreground="White" Background="#eb69a3" HorizontalAlignment="Left" Height="50" Width="100" hc:BorderElement.CornerRadius="0" Margin="4"/>
            <StackPanel>
                <TextBlock Name="UsernameText" FontSize="12"/>
                <TextBlock Name="PPRankText" FontSize="12"/>
                <TextBlock Name="OsuInstallVerifyText" FontSize="12"/>
                <TextBlock Name="OsuVersionNumber" FontSize="12"/>
                <TextBlock Name="OsuAPIStatusText" FontSize="12"/>
                <TextBlock Name="ConnectionStateText" FontSize="12"/>
            </StackPanel>
        </StackPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
