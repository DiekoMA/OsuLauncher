<Page x:Class="OsuLauncher.Pages.BeatmapPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OsuLauncher.Pages"
      mc:Ignorable="d"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      MinHeight="450" MinWidth="800">
    <DockPanel>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="Top" Margin="5">
            <hc:SearchBar Width="750" hc:InfoElement.Placeholder="No Title" hc:BorderElement.CornerRadius="2" HorizontalAlignment="Stretch"/>
            <Button Name="FilterPanelButton" Content="Filters" hc:BorderElement.CornerRadius="1"/>
            <Button Name="DownloadPanelButton" Content="Downloads" hc:BorderElement.CornerRadius="1"/>
        </StackPanel>
        <StackPanel Name="DownloadsBox" DockPanel.Dock="Left" Visibility="Collapsed" hc:BorderElement.CornerRadius="1" Margin="3">
            
        </StackPanel>
        <StackPanel Name="FilterBox" DockPanel.Dock="Left" Visibility="Collapsed" hc:BorderElement.CornerRadius="1" Margin="3">
            
        </StackPanel>
        <ListBox Name="BeatmapResultsBox" hc:BorderElement.CornerRadius="1" Margin="3">
            
        </ListBox>
    </DockPanel>
</Page>
