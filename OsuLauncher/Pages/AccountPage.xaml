<Page x:Class="OsuLauncher.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OsuLauncher.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d"
      Title="AccountPage" MinHeight="450" MinWidth="800">
    <DockPanel>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5">
            <hc:ImageBlock Name="AvatarBlock" Width="100" Height="100"/>
            <StackPanel>
                <TextBlock Name="UsernameText" FontSize="10"/>
                <TextBlock Name="AccuracyText" FontSize="10"/>
                <!-- ReSharper disable once InconsistentNaming -->
                <TextBlock Name="PPRankText" FontSize="10"/>
                <TextBlock Name="LevelText" FontSize="10"/>
            </StackPanel>
            
        </StackPanel>
        <TabControl>
            <TabItem Header="Top Plays">
                
            </TabItem>
        </TabControl>
    </DockPanel>
</Page>
