<Page x:Class="OsuLauncher.Pages.AccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OsuLauncher.Pages"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      mc:Ignorable="d"
      Title="AccountPage" MinHeight="450" MinWidth="800">
    <DockPanel>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
        </Grid>
        <StackPanel DockPanel.Dock="Top" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="5">
            <hc:ImageBlock Name="AvatarBlock" Width="100" Height="100"/>
            <StackPanel>
                
            </StackPanel>

        </StackPanel>
        <TabControl>
            <TabItem Header="me!">
                <RichTextBox Name="ProfileDescriptionBox"/>
            </TabItem>
            <TabItem Header="Favourite Beatmaps">

            </TabItem>
            <TabItem Header="Recent">

            </TabItem>
        </TabControl>
    </DockPanel>
</Page>
