<Page x:Class="OsuLauncher.Pages.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OsuLauncher.Pages"
      mc:Ignorable="d"
      xmlns:uc="clr-namespace:OsuLauncher.Pages.Settings"
      MinHeight="450" MinWidth="800">

    <TabControl>
        <TabItem Header="General">
            <uc:GeneralSettings/>
        </TabItem>
        <TabItem Header="Osu! Settings">
            <uc:OsuGameSettings/>
        </TabItem>
        <TabItem Header="Rich Presence">
            <uc:RichPresenceSettings/>
        </TabItem>
        <TabItem Header="Optimisations">
            <uc:OptimisationSettings/>
        </TabItem>
        <TabItem Header="Backup">
            <uc:BackupSettings/>
        </TabItem>
    </TabControl>
</Page>
