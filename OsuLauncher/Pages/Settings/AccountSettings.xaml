<Page x:Class="OsuLauncher.Pages.Settings.AccountSettings"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:OsuLauncher.Pages.Settings"
      mc:Ignorable="d"
      xmlns:hc="https://handyorg.github.io/handycontrol"
      MinHeight="450" MinWidth="800">
    <StackPanel>
        <Button Name="InitAuthButton" Content="Login" hc:BorderElement.CornerRadius="1" HorizontalAlignment="Left" Margin="5"/>
        <Border Margin="5" BorderThickness="2" BorderBrush="Black">
            <StackPanel Orientation="Horizontal">
                <hc:ImageBlock/>
                <StackPanel>
                    <TextBlock Name="UsernameText" FontSize="10"/>
                    <TextBlock Name="AccuracyText" FontSize="10"/>
                    <!-- ReSharper disable once InconsistentNaming -->
                    <TextBlock Name="PPRankText" FontSize="10"/>
                    <TextBlock Name="LevelText" FontSize="10"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </StackPanel>
</Page>
