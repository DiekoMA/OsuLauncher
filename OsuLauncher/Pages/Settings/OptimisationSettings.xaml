<UserControl x:Class="OsuLauncher.Pages.Settings.OptimisationSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:OsuLauncher.Pages.Settings"
             mc:Ignorable="d" 
             xmlns:hc="https://handyorg.github.io/handycontrol"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StatusBar Grid.Row="0">
            <ComboBox ToolTip="Select a profile for your specific optimisation settings">
                
            </ComboBox>
            <Button Content="Optimise"/>
        </StatusBar>

        <StackPanel Grid.Row="1">
            <CheckBox Content="Disable Game Bar" Margin="4"/>
            <CheckBox Content="Set Osu to highest priority" Margin="4"/>
            <CheckBox Content="Close Background apps" Margin="4"/>
        </StackPanel>
    </Grid>
</UserControl>
